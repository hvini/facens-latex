% ---
% Variáveis
% ---
\newcommand{\coordenadoria}{\def \@coordenadoria}
\newcommand{\integranteum}{\def \@integranteum}
\newcommand{\integrantedois}{\def \@integrantedois}
\newcommand{\subtitulo}{\def \@subtitulo}

% ---
% Inicialização das variáveis
% ---
\coordenadoria{}
\integranteum{}
\integrantedois{}
\subtitulo{}

% ---
% Imprimir as váriaveis
% ---
\newcommand{\imprimircoordenadoria}{\@coordenadoria}
\newcommand{\imprimirintegranteum}{\@integranteum}
\newcommand{\imprimirintegrantedois}{\@integrantedois}
\newcommand{\imprimirsubtitulo}{\@subtitulo}

% ---
% Re-adaptações de capa e folha de rosto
% ---

% Capa
\renewcommand{\imprimircapa}{
    \begin{titlingpage}
        \begin{center}
            % Todos elementos da capa devem estar em negrito
            \bfseries
            \includegraphics[scale=0.5]{logo-f.png}
            
            \Large{\MakeUppercase{\imprimircoordenadoria}}
            
            \vspace*{5cm}

            \large{\MakeUppercase{\imprimirintegranteum}}\par
            \large{\MakeUppercase{\imprimirintegrantedois}}
            
            \vspace*{5cm}

            \ifx\@subtitulo\empty
                \large{\MakeUppercase{\imprimirtitulo}}
            \else
                \large{\MakeUppercase{\imprimirtitulo}: \imprimirsubtitulo}
            \fi
            
            \vfill
            \large\imprimirlocal\par
            \large\imprimirdata
        \end{center}
    \end{titlingpage}
}

% Folha de rosto
\renewcommand{\folhaderostocontent}{
    \begin{center}
        \normalsize{\textbf{\imprimirintegranteum}}\par
        \normalsize{\textbf{\imprimirintegrantedois}}

        \vspace*{5cm}

        \ifx\@subtitulo\empty
            \large{\textbf{\MakeUppercase{\imprimirtitulo}}}
        \else
            \large{\textbf{\MakeUppercase{\imprimirtitulo}: \imprimirsubtitulo}}
        \fi

        \vspace*{5cm}

        %Adiciona o espaço da margem
        \hspace*{8cm}
        \begin{minipage}{8cm}
            \begin{SingleSpace}
                \small\imprimirpreambulo
            \end{SingleSpace}
        \end{minipage}

        \vfill
        \large{\textbf\imprimirlocal}\par
        \large{\textbf\imprimirdata}
    \end{center}
}

% ---
% FIM DAS CUSTOMIZACOES PARA O CENTRO UNIVERSITÁRIO FACENS
